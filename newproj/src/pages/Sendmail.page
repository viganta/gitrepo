<apex:page Controller="Dynamicsoql" >
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockSection >
                <apex:outputLabel value="To" />
                <apex:inputText value="{!toaddress}"/>
            </apex:pageBlockSection>
                <apex:pageBlockSection >
                <apex:outputLabel value="Subject" />
                <apex:inputText value="{!subjectstring}"/>
            </apex:pageBlockSection>
            <apex:pageBlockSection > 
                <apex:outputLabel value="Textarea" />
                <apex:inputTextarea value="{!textareaBig}"/>
            </apex:pageBlockSection>
            <apex:pageBlockButtons > 
                <apex:commandButton value="Send" action="{!senEmail}"/>
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>
</apex:page>